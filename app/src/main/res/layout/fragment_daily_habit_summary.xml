<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_daily_habit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Name"/>

    <TextView
        android:id="@+id/tv_daily_habit_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample description"/>

    <TextView
        android:id="@+id/tv_daily_habit_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"/>

    <CheckBox
        android:id="@+id/cb_daily_habit_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminders?"/>

    <TextView
        android:id="@+id/tv_daily_habit_reminder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
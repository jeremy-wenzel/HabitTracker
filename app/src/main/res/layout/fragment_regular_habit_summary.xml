<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_regular_habit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Name"/>

    <EditText
        android:id="@+id/et_regular_habit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_regular_habit_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample description"/>

    <EditText
        android:id="@+id/et_regular_habit_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cb_daily_habit_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminders_question"/>

    <TextView
        android:id="@+id/tv_daily_habit_reminder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_save_regular_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"/>

</LinearLayout>